@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-row justify-content-center">
    @* Categories *@
    <div class="d-flex flex-column mx-2">
        <a asp-action="Index" class="my-1 category-list-item">Всі товари</a>
        @foreach (var category in Model.Categories)
        {
            <a asp-route-category="@category.Name" asp-action="Index" class="my-1 category-list-item">@category.Name</a>
        }
    </div>

    @* Products *@
    <div class="row row-cols-4 g-3 m-auto">
        @foreach (var product in Model.Products)
        {
            <partial name="_ProductCard" model="product" />
        }
    </div>
</div>
<div class="mt-3 d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(Model.Pagination.Page == 1 ? "disabled" : "")">
                <a asp-action="Index" asp-route-page="@(Model.Pagination.Page - 1)" asp-route-category="@Model.Category" class="page-link">Previous</a>
            </li>
            @for(int i = 1; i <= Model.Pagination.PageCount; i++)
            {
                <li class="page-item @(Model.Pagination.Page == i ? "active" : "")">
                    <a asp-action="Index" asp-route-page="@i" asp-route-category="@Model.Category" class="page-link">@i</a>
                </li>
            }
            <li class="page-item @(Model.Pagination.Page == Model.Pagination.PageCount ? "disabled" : "")">
                <a asp-action="Index" asp-route-page="@(Model.Pagination.Page + 1)" asp-route-category="@Model.Category" class="page-link">Next</a>
            </li>
        </ul>
    </nav>
</div>
